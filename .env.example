# Backend Environment Variables
# Copy this file to .env and fill in your values
# For PRODUCTION: Set these in Railway dashboard, not in a .env file!

# Server Configuration
PORT=8080
ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Database Connection (IMPORTANT)
# Get this from Supabase > Project Settings > Database > Connection String > URI
# Use the "Transaction Pooler" mode (port 6543) for best results in production
DATABASE_URL=postgres://postgres.your-project:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=disable
SUPABASE_DB_URL=postgres://postgres.your-project:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=disable


# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRY=24h

# WhatsApp Gateway (Fonnte)
FONNTE_API_KEY=your-fonnte-api-key
FONNTE_API_URL=https://api.fonnte.com/send

# WhatsApp Gateway (Wablas) - Alternative
WABLAS_API_KEY=your-wablas-api-key
WABLAS_API_URL=https://pati.wablas.com/api/send-message

# CORS
CORS_ORIGINS=http://localhost:5173,https://kasirku.app

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60
